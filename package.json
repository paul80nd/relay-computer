{
  "name": "relay-computer",
  "version": "1.2.0",
  "description": "Relay Computer Simulator",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc -p src",
    "build_prod": "npm run clean && npm run build && npm run bundle && npm run minify",
    "bundle": "browserify -s main dist/main.js > dist/bundle.js",
    "minify": "uglifyjs dist/bundle.js --screw-ie8 --compress --mangle --output dist/bundle.min.js",
    "lint": "tslint \"src/**/*.ts\"",
    "lite": "lite-server",
    "tsc": "tsc",
    "typings": "typings install"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "~4.0.0",
    "@angular/compiler": "~4.0.0",
    "@angular/core": "~4.0.0",
    "@angular/forms": "~4.0.0",
    "@angular/http": "~4.0.0",
    "@angular/platform-browser": "~4.0.0",
    "@angular/platform-browser-dynamic": "~4.0.0",
    "@angular/router": "~4.0.0",
    "angular-in-memory-web-api": "~0.3.0",
    "systemjs": "0.19.40",
    "core-js": "^2.4.1",
    "rxjs": "5.0.1",
    "zone.js": "^0.8.4"
  },
  "devDependencies": {
    "@types/core-js": "^0.9.41",
    "@types/node": "^6.0.46",
    "lite-server": "^2.2.2",
    "protractor": "~4.0.14",
    "tslint": "^3.15.1",
    "typescript": "~2.1.0"
  }
}
